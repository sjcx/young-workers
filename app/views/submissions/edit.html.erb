<!-- body -->
<div class="page-header">
	<h1>Update Submission for <%= @submission.name %></h1>
</div>
<!-- form -->
<%= simple_form_for(@submission, :html => { :class => "form-horizontal" } ) do |f| %>
<fieldset>
	<%= f.input :status, collection: ["Declined", "Waitlisted", "Sara", "Senait", "Published"], input_html: {class: 'status'} %>
	<%= f.input :notes, placeholder: 'Updates on status of submission go here (please enter notes any time you change status of submission).', input_html: { class: 'input-xxlarge', rows: '6' } %>
	<%= f.button :submit %>
</fieldset>
<% end %>