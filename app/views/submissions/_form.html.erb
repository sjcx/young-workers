<%= simple_form_for(@submission, :html => { :class => "form-horizontal" } ) do |f| %>
<fieldset>
	<%= f.input :name, placeholder: 'We\'ll keep your real name confidential, or you can use an alias.', input_html: { class: 'input-xxlarge', rows: '4' } %>
	<%= f.input :email, required: true %>
	<%= f.input :age,  collection: 10..35, hint: 'Please be 35 or younger; weâ€™re down with all workers, but this project has a specific scope.' %>
	<%= f.input :job, placeholder: 'Give us a sense of your current and/or past work in a few sentences.', input_html: { class: 'input-xxlarge', rows: '6' }%>
	<%= f.input :demographic, label: 'Demographic info (optional)', required: false, placeholder: 'Any info you wish to provide about your race, gender, sexual preference, family background, etc. is helpful to us in ensuring the diversity of the project.', input_html: { class: 'input-xxlarge', rows: '6' } %>
	<%= f.input :location, collection: ["New York", "San Francisco"] %>
	<%= f.button :submit %>
</fieldset>
<% end %>
