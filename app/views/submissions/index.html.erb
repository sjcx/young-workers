<div class="page-header">
	<h1>Submissions</h1>
</div>
<div class="row-fluid">
	<%= paginate @submissions %>
	<table class="table table-hover">
		<% @submissions.each do |submission| %>
		<tr>
			<td>
			<p class="lead">
				<a href="/submissions/<%= submission.id %>/edit"><%= submission.name  %></a>&nbsp;&nbsp;<span class="<%= submission.status  %>"><%= submission.status  %></span>
			<p>
				<b>Email: </b><%= submission.email  %>
			</p>
			<p>
				<b>Age: </b><%= submission.age  %>
			</p>
			<p>
				<b>Location: </b><%= submission.location  %>
			</p>
			<p>
				<b>Job Summary: </b><%= submission.job  %>
			</p>
			<p></td>
			<td>
				<b>Demographic info: </b><%= submission.demographic  %>
			</p>
			<p>
				<b>Admin Notes: </b><span class="text-error"><%= submission.notes  %></span>
			</p>
			</td>
		</tr>
		<% end %>
	</table>
	<%= paginate @submissions %>
</div>
