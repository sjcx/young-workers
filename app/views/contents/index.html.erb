<div class="page-header">
	<h1>Contents</h1>
</div>
<div class="row-fluid">
	<div class="span6 offset3">
		<table class="table table-hover">
			<% @contents.each do |content| %>
			<tr>
				<td><%= content.number %>.</td>
				<td><%= raw content.title  %></td>
				<td><%= link_to "Show", url_for(content) %></td>
				<td><%= link_to "Delete", content_path(content), :method => :delete %></td>
				<td><%= link_to "Edit", edit_content_url(content) %></td>
			</tr>
			<% end %>
		</table>
	</div>
	<br>
	<br>
</div>
<br>
<div class="text-center">
	<%= link_to 'Add Content', new_content_url %>
</div>